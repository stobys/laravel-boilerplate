{
    "name": "stobys/boilerplate",
    "description": "Laravel 5.6 Based WebApp Boilerplate",
    "keywords": ["boilerplate", "laravel"],
    "license": "MIT",
    "type": "project",
    "authors": [
        {
            "name": "Slawomir Tobys",
            "email": "s.tobys@gmail.com"
        }
    ],
    "require": {
        "php": "^7.1.3",
        "laravel/framework": "5.6.*",
        "laravel/tinker": "~1.0",

        "appstract/laravel-blade-directives": "^0.4.4",
        "arcanedev/log-viewer": "^4.5",
        "arcanedev/no-captcha": "^5.0",
        "moneyphp/money": "3.*",
        "laracasts/presenter": "0.*",
        "cviebrock/eloquent-sluggable": "4.5.*",
        "efriandika/laravel-settings": "1.2.*",
        "vinkla/shield": "2.*",
        "spatie/laravel-backup": "5.6.*",
        "spatie/laravel-permission": "2.*",
        "spatie/laravel-activitylog": "2.5.*",
        "spatie/laravel-sluggable": "2.1.*",
        "spatie/laravel-html": "2.19.*",
        "barryvdh/laravel-debugbar": "3.1.*",
        "guzzlehttp/guzzle": "~6.0",
        "barryvdh/laravel-dompdf": "0.*"
    },
    "require-dev": {
        "fzaninotto/faker": "~1.4",
        "mockery/mockery": "0.9.*",
        "phpunit/phpunit": "~5.7"
    },
    "autoload": {
        "classmap": [
            "database"
        ],
        "psr-4": {
            "App\\"     : "app/",
            "SylveK\\"  : "app/Helpers/SylveK/"
        },
        "files": [
            "app/Helpers/helpers.php"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "scripts": {
        "post-root-package-install": [
            "php -r \"file_exists('.env') || copy('.env.example', '.env');\""
        ],
        "post-create-project-cmd": [
            "php artisan key:generate"
        ],
        "post-install-cmd": [
            "Illuminate\\Foundation\\ComposerScripts::postInstall",
            "php artisan optimize"
        ],
        "post-update-cmd": [
            "Illuminate\\Foundation\\ComposerScripts::postUpdate",
            "php artisan optimize"
        ]
    },
    "config": {
        "preferred-install": "dist",
        "sort-packages": true,
        "optimize-autoloader": true
    }
}
